<UserControl x:Class="WpfStudy._09模板.CarListViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfStudy._09模板"
             mc:Ignorable="d">
    <Grid Margin="2">
        <StackPanel  Orientation="Horizontal">
            <Image x:Name="igLogo" Width="64" Height="64"></Image>
            <StackPanel Margin="5,10">
                <TextBlock x:Name="txtBlockName" FontSize="16" FontWeight="Bold"></TextBlock>
                <TextBlock x:Name="txtBlockYear" FontSize="14"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
