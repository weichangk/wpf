<Window x:Class="WpfStudy._04Binding._01Binding基础.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStudy._04Binding._01Binding基础"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="500">
    <StackPanel>
        <TextBox x:Name="TxbName" BorderBrush="Green" Margin="5"></TextBox>
        <Button Content="追加name值" x:Name="BtnAddName" Background="Red" Margin="5" Click="BtnAddName_Click"></Button>
        <Button Content="获取name值" x:Name="BtnGetName" Margin="5" Click="BtnGetName_Click"></Button>
    </StackPanel>
</Window>
