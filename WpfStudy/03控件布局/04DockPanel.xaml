<Window x:Class="WpfStudy._03控件布局._04DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStudy._03控件布局"
        mc:Ignorable="d"
        Title="04DockPanel" Height="600" Width="800">
    <DockPanel>
        <Button Content="Button1 Top" DockPanel.Dock="Top"></Button>
        <Button Content="Button2 Left" DockPanel.Dock="Left"></Button>
        <Button Content="Button3 Bottom" DockPanel.Dock="Bottom"></Button>
        <Button Content="Button4 Right" DockPanel.Dock="Right"></Button>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Orientation="Vertical" VerticalAlignment="Center" Background="Red">
                <Button Content="yes" Margin="50"></Button>
                <Button Content="no" Margin="10"></Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Background="Green">
                <Button Content="OK" Margin="10"></Button>
                <Button Content="Cancle" Margin="10"></Button>
            </StackPanel>
            <TextBox DockPanel.Dock="Top" Background="AliceBlue">this is test</TextBox>
        </DockPanel>
    </DockPanel>
</Window>
